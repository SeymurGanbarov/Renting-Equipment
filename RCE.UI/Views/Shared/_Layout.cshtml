@using RCE.UI.Resources
@using RCE.UI.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@UI.Title</title>

    <!-- Favicon  -->
    <link rel="icon" href="~/UI/img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/css/ui")
    <link href="~/Content/jquery.loading.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @*<script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>*@
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <style >
        .modal-backdrop {
            z-index: 0;
        }
        .fs-09{
            font-size:.9em;
        }
    </style>
</head>
<body class="p-0">
    <div class="main-content-wrapper d-flex clearfix">
        <!-- Search Wrapper Area Start -->
        <div class="search-wrapper section-padding-100">
            <div class="search-close">
                <i class="fa fa-close" aria-hidden="true"></i>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="search-content">
                            <form action="#" method="get">
                                <input type="search" name="search" id="search" onkeyup="" placeholder="@UI.TypeKeyword">
                                <button><img src="~/UI/img/core-img/search.png" alt=""></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Header Area Start -->
        <header class="header-area clearfix pt-4">
            <!-- Close Icon -->
            <div class="nav-close">
                <i class="fa fa-close" aria-hidden="true"></i>
            </div>
            <!-- Logo -->
            <div class="logo">
                <a href="@Url.Action("Index","Home")"><img src="~/UI/img/core-img/construction-equipment-rental.png" alt=""></a>
            </div>
            <!-- Amado Nav -->
            <nav class="amado-nav">
                <ul>
                    <li style="cursor:pointer" class="active"><a href="@Url.Action(nameof(HomeController.Index),"Home")">@UI.Home</a></li>
                    <li style="cursor:pointer"><a href="@Url.Action(nameof(ProductController.Index),"Product")">@UI.Product</a></li>
                    <li style="cursor:pointer"><a href="@Url.Action(nameof(CabinetController.Index),"Cabinet")">@UI.Cabinet</a></li>
                    <li style="cursor:pointer"><a href="@Url.Action(nameof(AccountController.Logout),"Account")">@UI.Logout</a></li>
                </ul>
            </nav>
            <!-- Button Group -->
            @*<div class="amado-btn-group mt-30 mb-100">
                <a href="#" class="btn amado-btn active">@UI.NewThisWeek</a>
            </div>*@
            <!-- Cart Menu -->
            <div class="cart-fav-search mb-100">
                @Html.Action(nameof(CartController.CartProductsCount),"Cart")
                @*<a href="#" class="search-nav"><img src="~/UI/img/core-img/search.png" alt=""> @UI.Search</a>*@
            </div>
            <!-- Social Button -->
            <div class="social-info d-flex justify-content-between">
                <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            </div>
        </header>
        <!-- Header Area End -->
            @RenderBody()
    
    </div>
    <!-- ##### Footer Area Start ##### -->
    <footer class="footer_area clearfix">
        <div class="container">
            <div class="row align-items-center">
                <!-- Single Widget Area -->
                <div class="col-12 col-lg-4">
                    <div class="single_widget_area">
                        <!-- Logo -->
                        @*<div class="footer-logo mr-50">
                            <a href="index.html"><img src="~/UI/img/core-img/construction-equipment-rental.png" alt=""></a>
                        </div>*@
                        <!-- Copywrite Text -->
                        <p class="copywrite">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> Developed by <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Seymur Ganbarov</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/js/ui")
    <script src="~/Scripts/jquery.loading.min.js"></script>
    <script src="~/App/util.js"></script>
    <script>
         $(function () {
             util.initialize("light");
             $('.modal').on('shown.bs.modal', function () {
                 $(this).css("z-index", parseInt($('.modal-backdrop').css('z-index')) + 1);
             });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>