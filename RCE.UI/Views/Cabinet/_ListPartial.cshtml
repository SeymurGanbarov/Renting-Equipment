@using RCE.UI.Models
@using RCE.UI.Resources
@using RCE.UI.Controllers
@model IEnumerable<ProductCartModel>

@if (Model.Count() > 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Type)</th>
                <th scope="col">@UI.TotalPrice</th>
                <th scope="col">@UI.EarnedPoint</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>@item.PaymentDetail.TotalPrice €</td>
                <td>@item.Point</td>
                <td><a href="@Url.Action(nameof(CabinetController.DownloadInvoice),new { productId=item.Id})" class="btn btn-warning fs-09">@UI.DownloadInvoice</a></td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <hr />
        <h1 class="text-center py-5 bg-dark text-white">@UI.HaveNotProduct</h1>
        <hr />
    </div>
}

