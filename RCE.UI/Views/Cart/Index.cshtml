@using RCE.UI.Models
@using RCE.UI.Controllers
@using RCE.UI.Resources
@model IEnumerable<ProductCartModel>
@{
    ViewBag.Title = "Index";
}
<div class="products-catagories-area clearfix mt-5" style="max-width:100%!important;width:100%!important">
    <div id="products" class="amado-pro-catagory clearfix">
        @Html.Partial("_ListPartial", Model)
    </div>
</div>
<div id="formModalDiv"></div>
@section scripts {
    <script>
        function getInvoice(element) {
            var productId = $(element).attr("data-id");
            util.showModal('#formModal', '@Url.Action(nameof(CartController.GetInvoice),"Cart")', { productId: productId });
        }

        function onSuccess(result) {
            if (result.IsSucceed) {
                alert('@UI.Rented');
                window.location.reload();
            }
        }
    </script>
}